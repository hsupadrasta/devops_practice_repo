import pytest
import requests
from requests.auth import HTTPBasicAuth

@pytest.fixture(scope="function")
def api_client():
    username = "YOUR-JIRA-USERNAME"
    password = "YOUR-JIRA-PASSWORD"
    return requests.Session(auth=HTTPBasicAuth(username, password))

def test_get_jira_issue(api_client):
    issue_key = "YOUR-JIRA-ISSUE-KEY"  # Replace with the actual issue key
    response = api_client.get(f"https://your-jira-instance.atlassian.net/rest/api/2/issue/{issue_key}")

    assert response.status_code == 200
    issue_data = response.json()
    assert issue_data["key"] == issue_key

if __name__ == "__main__":
    pytest.main(["-v", "test_jira_api.py"])
