SELECT 
    fk.name AS ForeignKey,
    tp.name AS ParentTable,
    ep_parent.value AS ParentTableDescription,
    cp.name AS ParentColumn,
    ep_parent_col.value AS ParentColumnDescription,
    tr.name AS ReferencedTable,
    ep_ref.value AS ReferencedTableDescription,
    cr.name AS ReferencedColumn,
    ep_ref_col.value AS ReferencedColumnDescription
FROM 
    sys.foreign_keys AS fk
INNER JOIN 
    sys.tables AS tp ON fk.parent_object_id = tp.object_id
LEFT JOIN 
    sys.extended_properties AS ep_parent ON ep_parent.major_id = tp.object_id AND ep_parent.minor_id = 0
INNER JOIN 
    sys.tables AS tr ON fk.referenced_object_id = tr.object_id
LEFT JOIN 
    sys.extended_properties AS ep_ref ON ep_ref.major_id = tr.object_id AND ep_ref.minor_id = 0
INNER JOIN 
    sys.foreign_key_columns AS fkc ON fkc.constraint_object_id = fk.object_id
INNER JOIN 
    sys.columns AS cp ON fkc.parent_column_id = cp.column_id AND fkc.parent_object_id = cp.object_id
LEFT JOIN 
    sys.extended_properties AS ep_parent_col ON ep_parent_col.major_id = cp.object_id AND ep_parent_col.minor_id = cp.column_id
INNER JOIN 
    sys.columns AS cr ON fkc.referenced_column_id = cr.column_id AND fkc.referenced_object_id = cr.object_id
LEFT JOIN 
    sys.extended_properties AS ep_ref_col ON ep_ref_col.major_id = cr.object_id AND ep_ref_col.minor_id = cr.column_id
