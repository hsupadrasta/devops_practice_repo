from selenium import webdriver
impor<!DOCTYPE html>
<html>
<head>
  <style>
    .image-container {
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .image-icon {
      width: 100px;
      height: 100px;
      object-fit: cover;
    }
    .expanded-image {
      display: none;
      position: fixed;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      margin: auto;
      z-index: 1;
    }
    .overlay {
      display: none;
      position: fixed;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      background-color: rgba(0, 0, 0, 0.7);
      z-index: 0;
    }
  </style>
</head>
<body onload="loadImages()">
  <div class="image-container">
  </div>
  <img class="expanded-image" onclick="closeImage()" />
  <div class="overlay" onclick="closeImage()"></div>
  <script>
    function loadImages() {
      var folderPath = "path/to/folder";
      var imageContainer = document.querySelector(".image-container");
      for (let file of filesInFolder(folderPath)) {
        if (file.endsWith(".jpg") || file.endsWith(".png")) {
          var image = document.createElement("img");
          image.classList.add("image-icon");
          image.src = folderPath + "/" + file;
          image.onclick = function() { expandImage(this); };
          imageContainer.appendChild(image);
        }
      }
    }

    function filesInFolder(folderPath) {
        var files = [];
        var fileNames = new XMLHttpRequest();
        fileNames.open("GET", folderPath, false);
        fileNames.send();
        var fileList = fileNames.responseText.split("\n");
        for (var i = 0; i < fileList.length; i++) {
            if (fileList[i].length > 0) {
                files.push(fileList[i]);
            }
        }
        return files;
    }

    function expandImage(image) {
      var expandedImage = document.querySelector(".expanded-image");
      expandedImage.src = image.src;
      expandedImage.style.display = "block";
      document.querySelector(".overlay").style.display = "block";
    }
    function closeImage() {
      document.querySelector(".expanded-image").style.display = "none";
      document.querySelector(".overlay").style.display = "none";
    }
  </script>
</body>
</html>
